
<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-notes" method="POST">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="Título" autofocus id="">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" rows="6" class="form-control" placeholder="Descripción"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>